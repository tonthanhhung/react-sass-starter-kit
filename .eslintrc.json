{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "plugins": [
    "react",
    "babel",
    "filenames"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "env": {
    "es6": true,
    "browser": true
  },
  "rules": {
    "curly": ["warn", "all"],
    "semi": "warn",
    "no-tabs": "error",
    "no-console": "off",
    "no-constant-condition": "off",
    "arrow-parens": "warn",
    "no-unused-vars": "warn",
    "no-undef": "warn",
    "react/jsx-uses-vars": "warn",
    "react/prop-types": "off",
    "react/no-string-refs": "warn",
    "react/jsx-key": "warn",
    "filenames/match-exported": "warn",
    "filenames/no-index": "off"
  }
}
